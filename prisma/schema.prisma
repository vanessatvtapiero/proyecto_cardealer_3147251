generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./Bogotaturis.db"
}
model alertas {
  id_alerta  Int @id @default(autoincrement())
  tipo_alerta  String
  plate String
  fecha_alerta DateTime @default(now())
  lugares lugares[]
}
model lugares {
  id_lugar  Int @id @default(autoincrement())
  Nombre_lugar String
  Tipo_lugar String
  direccion String
  hora_apertura String
  hora_cierre String
  precio Float
  alerta_id Int
  alerta alertas @relation(fields: [alerta_id], references: [id_alerta])
}

//modelos de autenticacion
model estado{
  id Int @id @default(autoincrement())
  estado String
  usuarios usuarios[]
}
model usuarios{
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password String
  estado_id Int
  estado estado @relation(fields: [estado_id] , references: [id])

}